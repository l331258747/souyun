<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nidaye"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hx"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/default_dp8">

            <ImageView
                android:id="@+id/wode"
                android:layout_marginStart="@dimen/default_dp10"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/default_dp10"
                android:src="@drawable/me"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tab_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="指尖上的发货平台"
                    android:textSize="@dimen/default_font18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/sys"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:src="@drawable/sys" />

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_below="@+id/ll_title"
            app:tabIndicatorColor="@android:color/holo_orange_light"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@android:color/holo_orange_light"
            app:tabTextAppearance="@style/TabLayoutTextStyle" />

        <com.xrwl.owner.view.ControlScrollViewPager
            android:id="@+id/viewpager"
            android:layout_below="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.xrwl.owner.view.ControlScrollViewPager>

        <ImageView
            android:id="@+id/wode2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingTop="@dimen/default_dp10"
            android:paddingBottom="@dimen/default_dp10"
            android:src="@drawable/ic_home_more"
            android:background="@color/gray_33"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/head"
        app:menu="@menu/menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
