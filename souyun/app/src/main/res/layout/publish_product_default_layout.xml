<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/publishProductDefaultLayout"
    style="@style/PublishLayoutStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dun"

        />



    <CheckBox
        android:id="@+id/dunfangCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text=""
         android:visibility="gone"
        />
    <TextView
        style="@style/PublishIconStyle"
        android:id="@+id/huowudunshu"
        android:text="  货物吨数             " />

    <EditText
        android:id="@+id/ppDefaultWeightEt"
        style="@style/PublishEditStyle"
        android:layout_marginStart="@dimen/default_dp6"
        android:background="@null"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingEnd="@dimen/dp_5"
        android:hint="请输入"
        android:inputType="numberDecimal"
        android:maxLength="8"
        tools:text="11111111"
        android:lines="1"
        android:textCursorDrawable="@drawable/color_cursor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吨"/>

    <EditText
        android:id="@+id/ppDefaultAreaEt"
        style="@style/PublishEditStyle"
        android:layout_marginStart="@dimen/default_dp6"
        android:background="@null"
        android:hint="请输入"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingEnd="@dimen/dp_5"
        android:gravity="right|center_vertical"
        android:maxLength="8"
        tools:text="11111111"
        android:inputType="numberDecimal"
        android:lines="1"
        android:textCursorDrawable="@drawable/color_cursor"/>

    <TextView
        android:id="@+id/quxiaojianTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方"/>

    <EditText
        android:id="@+id/jianDefaultWeightEt"
        style="@style/PublishEditStyle"
        android:layout_marginStart="@dimen/default_dp6"
        android:background="@null"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingEnd="@dimen/dp_5"
        android:gravity="right|center_vertical"
        android:hint="请输入"
        android:maxLength="8"
        tools:text="11111111"
        android:inputType="numberDecimal"
        android:lines="1"
        android:textCursorDrawable="@drawable/color_cursor"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="件" />





</LinearLayout>
<!--默认货物 输入-->


