                                    <ImageView
                                        android:layout_width="15px"
                                        android:layout_height="15px"
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/list_hongdian" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.9"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/detailStartPosTv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="6dp"
                                            android:gravity="center"
                                            android:text="山西省临汾市尧都区"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/default_font16" />

                                        <TextView
                                            android:id="@+id/detailStartPosTvs"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="今井村"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/default_font16" />

                                        <TextView
                                            android:id="@+id/detailEndPosTv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:text="山西省临汾市尧都区"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/default_font16" />

                                        <TextView
                                            android:id="@+id/detailEndPosTvs"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="尧庙村"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/default_font16" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <!--<FrameLayout-->
