                <TextView
                    android:id="@+id/shijimingcheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="司机名称："
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/default_dp8"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/shijidianhua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="司机电话："
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/default_dp8"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/shijichepai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="司机车牌号："
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/default_dp8"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detailProductNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="货物：光纤"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detailTruckTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车型：小型面包车"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />

                    <TextView
                        android:id="@+id/detailAreaTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="体积：2方"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detailPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格：175元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />

                    <TextView
                        android:id="@+id/detailWeightTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="重量：1吨"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detailKiloTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公里：17.5公里"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />

                    <TextView
                        android:id="@+id/detailNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="数量：3件"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14"

                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paytv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="支付：10%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />

                    <TextView
                        android:id="@+id/detailBaozhuangTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="包装：桶装"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/default_font14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/detailNumTvss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="数量：3件"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/payhuokuantv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="支付：10%"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/default_font14" />

                    <TextView
                        android:id="@+id/detailBaozhuanaagTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="包装：桶装"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/detailaaNumTvss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="数量：3件"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/default_font14"
                        android:visibility="gone" />


                </FrameLayout>

                <TextView
                    android:id="@+id/detailOrderIdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp8"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_font14" />


                <!--<TextView-->
                <!--android:id="@+id/detailConsigneeTv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/default_dp8"-->
                <!--android:drawableEnd="@drawable/ic_call"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="收货电话：345"-->
                <!--android:textColor="@color/gray"-->
                <!--android:textSize="@dimen/default_font14"/>-->


            </LinearLayout>

            <include
                android:id="@+id/line"
                layout="@layout/base_lineview_include" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tupianyincang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <include
                        android:id="@+id/detailPhotoView"
                        layout="@layout/add_showphotos_recyclerview_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/default_dp15"
                        android:text="欢迎致电24小时客服：0357-2591666"
                        android:textColor="@color/gray" />

                    <include
                        android:id="@+id/line"
                        layout="@layout/base_lineview_include"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/huozhuxiangqingbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:layout_marginBottom="@dimen/default_dp10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/detailCancelBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:text="取消订单" />


                    <Button
                        android:id="@+id/detailLocationBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="定位司机" />

                    <Button
                        android:id="@+id/detailConfirmBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="确认收货" />

                    <Button
                        android:id="@+id/detailConfirmfaBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="确认发货" />


                    <Button
                        android:id="@+id/detailSendByselfBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="开始自送" />

                    <Button
                        android:id="@+id/detailSendByselfquxiaoBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="取消自送" />

                    <Button
                        android:id="@+id/detailPickByselfBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="开始自提" />

                    <Button
                        android:id="@+id/detailPickByselfquxiaoBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="取消自提" />


                    <Button
                        android:id="@+id/detailUploadBtn"
                        style="@style/OrderDetailBtnStyle"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="上传图片"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dianpingLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:layout_marginBottom="@dimen/default_dp10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/detailSelectBtn"
                        style="@style/BaseBtnThemes"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="查看线路" />

                    <Button
                        android:id="@+id/detailDianPingBtn"
                        style="@style/BaseBtnThemes"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="在线点评" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:layout_marginBottom="@dimen/default_dp10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/zhifuweikuanBtn"
                        style="@style/BaseBtnTheme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="支付运费尾款" />


                    <Button
                        android:id="@+id/zhifuweikuandaishouBtn"
                        style="@style/BaseBtnTheme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="支付(代收)货款" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/homeViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="8dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/homeIntroRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/homeServiceRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"

                    />

                <LinearLayout
                    android:id="@+id/yijieqing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_dp20"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:layout_marginEnd="@dimen/default_dp20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/login_ic_edit"
                        android:gravity="center_vertical"
                        android:text="付款方式"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font18" />


                    <RadioGroup
                        android:id="@+id/rg_tab_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="全额支付" />

                        <RadioButton
                            android:id="@+id/rb_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="保证金"
                            android:visibility="gone" />
                    </RadioGroup>

                    <Spinner
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_dp40"
                        android:entries="@array/fukuan"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <include layout="@layout/base_pay_layoutpingjia" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include layout="@layout/base_pay_layoutfinish" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
