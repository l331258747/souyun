<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/global_bg_color">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/jianbian"
        android:orientation="vertical">

        <com.ldw.library.view.TitleView
            android:id="@+id/baseTitleView"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"

            android:gravity="center"
            app:titleGravity="center"
            app:titleTextColor="@color/white"/>


        <LinearLayout
            android:id="@+id/gerenxinxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meItemAvatarIv"
                android:layout_width="@dimen/default_dp50"
                android:layout_height="@dimen/default_dp60"
                android:layout_marginStart="@dimen/default_dp10"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_default_avatar" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/default_dp10"
                android:layout_marginTop="@dimen/default_dp10"
                >
                <TextView
                    android:id="@+id/meItemNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_dp8"

                    android:layout_toEndOf="@id/meItemAvatarIv"
                    android:text="龙哥哥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font16" />

                <TextView
                    android:id="@+id/meItemPhoneTv"
                    android:layout_alignStart="@id/meItemNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/default_dp1"

                    android:layout_toEndOf="@id/meItemAvatarIv"
                    android:text="13429388607"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font16" />
            </LinearLayout>







        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_dp10"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yhjpic"
                android:layout_width="110dp"
                android:layout_height="@dimen/default_dp40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/newyouhuijuan" />

            <ImageView
                android:id="@+id/yhkpic"
                android:layout_width="110dp"
                android:layout_height="@dimen/default_dp40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/newbank" />

            <ImageView
                android:id="@+id/yepic"
                android:layout_width="110dp"
                android:layout_height="@dimen/default_dp40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/newyue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/yhj"
                android:layout_width="110dp"
                android:layout_height="@dimen/default_dp40"
                android:gravity="center"
                android:text="优惠卷"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/yhk"
                android:layout_width="110dp"
                android:layout_height="@dimen/default_dp40"
                android:gravity="center"
                android:text="银行卡"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ye"
                android:layout_width="110dp"
                android:layout_height="@dimen/default_dp40"
                android:gravity="center"
                android:text="余额"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>








    <include layout="@layout/base_lineview_include"/>
