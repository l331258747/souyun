    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:id="@+id/fanhuizhuyejian"
        >
         <ImageView
             android:id="@+id/fanhuijian"
            android:layout_width="18dp"
            android:layout_marginStart="@dimen/default_dp10"
            android:layout_height="18dp"
             android:layout_gravity="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/default_dp10"
            android:text="实名认证"
            android:textSize="@dimen/default_font14"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/neibufanhuifanhuijian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/neifanhuifanhuijian"
            android:layout_width="18dp"
            android:layout_marginStart="@dimen/default_dp10"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/default_dp10"
            android:text="实名认证"
            android:textSize="@dimen/default_font14"
            android:layout_gravity="center"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/toprzLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dp1"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/default_dp10"
            android:layout_marginEnd="@dimen/default_dp10"
            android:layout_height="215dp"
            android:src="@drawable/yirenzheng" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/topLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dp1"

        >
           <ImageView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/default_dp10"
            android:layout_marginEnd="@dimen/default_dp10"
            android:layout_height="215dp"
            android:src="@drawable/weirenzheng" />
    </LinearLayout>

     <LinearLayout
        android:id="@+id/diyiLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dp10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善身份信息，体验更多服务"
                android:layout_marginStart="@dimen/default_dp10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/default_dp10"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:text="dfdf"
                android:visibility="invisible"
                />


            <Button
                android:id="@+id/diyiweiwanshanbt"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginEnd="15dp"
                android:text="未完善"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dierLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件照片"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dp10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传证件照片，提升服务体验"
                android:layout_marginStart="@dimen/default_dp10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/default_dp10"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:text="dfdf"
                android:visibility="invisible"
                />
            <Button
                android:id="@+id/dierweiwanshanbt"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginEnd="15dp"
                android:text="未完善"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/disanLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_dp10"
                android:text="整车发货单位"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_dp10"
                android:text="完善身份信息，成为整车发货单位" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_dp10"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="dfdf"
                android:visibility="invisible" />

            <Button
                android:id="@+id/disanweiwanshanbt"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@color/white"
                android:text="未完善" />
        </LinearLayout>

    </LinearLayout>


  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/aliyun"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="实名认证服务由阿里云计算有限公司提供"
                android:background="@color/gray"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/default_font14" />


             <LinearLayout
                android:id="@+id/diyiduiyingLY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/default_dp15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/default_dp50"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:text="姓     名"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />
                    <EditText
                        android:id="@+id/authNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/default_dp20"
                        android:background="@null"
                        android:hint="请输入真实姓名"
                        android:lines="1"
                        android:inputType="text"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/default_font14"/>
                </LinearLayout>
                <include layout="@layout/base_lineview_include"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/default_dp15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/default_dp50"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:text="身份证"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font14" />
                    <EditText
                        android:id="@+id/authidentifiedEt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/default_dp20"
                        android:background="@null"
                        android:hint="请输入身份证"
                        android:lines="1"
                        android:inputType="text"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/default_font14"/>
                </LinearLayout>
                <include layout="@layout/base_lineview_include"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/dierbuduiyingLY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/default_font12"
                            android:text="请上传身份证正面"
                            />



                        <ImageView
                            android:id="@+id/authIdIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/zhengmian" />


                    </LinearLayout>

                    <include layout="@layout/base_lineview_include" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_dp15"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/default_font12"
                            android:text="请上传身份证反面"
                            />
                        <ImageView
                            android:id="@+id/authAvatarIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fanmian" />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/disanbuduiyingLY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/authCheckBoxLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <CheckBox
                            android:id="@+id/authCb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请成为"

                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/default_font12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="整车发货"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/default_font12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单位"

                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/default_font12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/authTotalLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical"
                        android:paddingStart="@dimen/default_dp40"
                        android:paddingTop="@dimen/default_dp15"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/default_dp20"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_dp10"
                                android:text="单位名称"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_font14" />

                            <EditText
                                android:id="@+id/authUnitNameEt"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginStart="@dimen/default_dp20"
                                android:layout_marginTop="@dimen/default_dp10"
                                android:background="@null"
                                android:hint="请输入单位名称"
                                android:inputType="text"
                                android:layout_marginBottom="5dp"
                                android:lines="1"
                                android:textSize="@dimen/default_font14" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/default_dp20"
                            >

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="128dp"
                                android:layout_marginStart="@dimen/default_dp20"
                                android:scaleType="centerCrop"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/authLicenseIv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:scaleType="centerCrop"
                                android:src="@drawable/zhizhao" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/authSuccessLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_dp20"
                    android:src="@drawable/ic_publish_success"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="恭喜您！上传成功"
                    android:layout_marginTop="@dimen/default_dp40"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_font26"/>

            </LinearLayout>

            <TextView
                android:id="@+id/authDesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp10"
                android:gravity="center"
                android:text="上传成功后，工作人员会在1-2个工作日内审核认证。"
                android:textColor="@color/light_gray"/>
            <Button
                android:visibility="gone"
                android:id="@+id/authConfirmBtn"
                style="@style/BaseBtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_dp20"
                android:layout_marginEnd="@dimen/default_dp25"
                android:layout_marginStart="@dimen/default_dp25"
                android:layout_marginTop="@dimen/default_dp20"
                android:text="确认"
                android:textColor="@color/white"/>



            <Button
                android:id="@+id/zhaopianyi"
                style="@style/BaseBtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_dp20"
                android:layout_marginEnd="@dimen/default_dp25"
                android:layout_marginStart="@dimen/default_dp25"
                android:layout_marginTop="@dimen/default_dp20"
                android:text="确认上传"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/zhaopianer"
                style="@style/BaseBtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_dp20"
                android:layout_marginEnd="@dimen/default_dp25"
                android:layout_marginStart="@dimen/default_dp25"
                android:layout_marginTop="@dimen/default_dp20"
                android:text="确认上传"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/jiantoufanhui"
                style="@style/BaseBtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_dp20"
                android:layout_marginEnd="@dimen/default_dp25"
                android:layout_marginStart="@dimen/default_dp25"
                android:layout_marginTop="@dimen/default_dp20"
                android:text="确认返回"
                android:textColor="@color/white"/>


        </LinearLayout>





    </ScrollView>

</LinearLayout>